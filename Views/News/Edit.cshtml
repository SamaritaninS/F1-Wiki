@model F1.Models.New
@{
    ViewBag.Title = "Editing new";
}
<form asp-action="edit" asp-controller="News" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Title</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Block1" class="control-label">Block of Info</label>
        <input type="text" asp-for="Block1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Block2" class="control-label">Block of Info</label>
        <input type="text" asp-for="Block2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Img" class="control-label">Image</label>
        <input type="text" asp-for="Img" class="form-control" />
    </div>

    
    <div class="form-group">
        <input type="submit" value="Confirm" class="btn btn-outline-success" />
    </div>
</form>


