@using Microsoft.AspNetCore.Identity
@model F1.ViewModels.ChangeRoleViewModel
@{
    ViewBag.Title = "Edit roles";
}

<h2>Changing roles for @Model.UserName</h2>

<form asp-action="EditRoles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>